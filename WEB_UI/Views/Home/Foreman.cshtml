@{
    ViewBag.Title = "Начальник цеха";
}

@section styles {
    @Styles.Render("~/DataTables/css")
    @Styles.Render("~/DateTime/css")
    @*<link rel="stylesheet" type="text/css" href="~/Content/report/report.css">*@
}

@section scripts {

    @*<script>
            $('body').addClass('img-header-global');
            $('#page-width').addClass('average');
        </script>*@

    @Scripts.Render("~/bundles/Ajax")
    @Scripts.Render("~/bundles/Moment")
    @Scripts.Render("~/bundles/DataTables")
    @Scripts.Render("~/bundles/DateTime")

    <script src="~/Scripts/view/common.js" type="text/javascript"></script>
    <script src="~/Scripts/view/api_locomotiv.js" type="text/javascript"></script>
    <script src="~/Scripts/view/foreman.js" type="text/javascript"></script>
}

<div class="row">
    <div class="col-xl-12">
        <div class="card border-secondary mb-3">
            <div class="card-header bg-secondary text-white">
                <h3 id="header_title">Текущее положение</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-xl-12">
                        <table class='table'>
                            <tbody>
                                <tr>
                                    <th>В работе</th>
                                    <td id="work"></td>
                                </tr>
                                <tr>
                                    <th>В ремонте</th>
                                    <td id="repairs"></td>
                                </tr>
                                <tr>
                                    <th>Итого</th>
                                    <td id="total"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-12">
        <div class="card border-primary mb-3">
            <div class="card-header bg-primary text-white">
                @*<h3 id="header_title">Отчетность за период</h3>*@
                <form class="form-inline">
                    <div class="form-group ml-2">
                        <label for="select_report" class="control-label">Статистика по :</label>
                        <select class="form-control form-control-sm ml-2" id="select_report" name="select_report"></select>
                    </div>
                    <div class="form-group ml-2">
                        <label for="select_object" class="control-label"> - </label>
                        <select class="form-control form-control-sm ml-2" id="select_object" name="select_object"></select>
                    </div>
                    <div class="form-group ml-2">
                        <label class="control-label">За период :</label>
                        <span id="select-range-date" class="ml-2">
                            <input class="form-control form-control-sm" id="date-start" name="date-start" style="width:130px;">
                            <input class="form-control form-control-sm" id="date-stop" name="date-stop" style="width:130px;">
                        </span>
                    </div>
                    <button type="button" class="btn btn-warning btn-sm ml-2" id="bt-view"><span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>Ок</button>
                </form>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-xl-12" id="report_repairs_lokomotive">
                        <table class='display compact hover row-border' id="list_repairs_lokomotive" style="width:100%;"></table>
                    </div>
                    <div class="col-xl-12" id="report_unit_lokomotive">
                        <table class='display compact hover row-border' id="list_unit_lokomotive" style="width:100%;"></table>
                    </div>
                    <div class="col-xl-12" id="report_damage_lokomotive">
                        <table class='display compact hover row-border' id="list_damage_lokomotive" style="width:100%;"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>