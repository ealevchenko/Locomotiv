<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="../../favicon.ico">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bootstrap/css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
    <div id="lockPanel" class="LockOff"></div>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-dark text-white bg-dark">
            @*<a class="navbar-brand" href="#">Navbar</a>*@
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href='@Url.Action("Index", "Home", new { Area = "" })'>Locomotive <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Начальник цеха</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href='@Url.Action("HeadDEPO", "Home", new { Area = "" })'>Начальник ДЕПО</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href='@Url.Action("ShiftSupervisor", "Home", new { Area = "" })'>Начальник смены</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Дипломная работа Решотка Вадима</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
